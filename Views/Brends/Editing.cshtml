@model Brend
@{ 
    ViewData["Title"] = "Editing";
    Layout = "_Layout"; 
}

<h2>Brand № @Model.Id</h2>
@using (Html.BeginForm("Editing", "Brends", FormMethod.Post))
{
<fieldset>
    @Html.HiddenFor(m => m.Id)
    <p>
        @Html.LabelFor(m => m.Name, "Name")
        <br />
        @Html.EditorFor(m => m.Name)
    </p>
    <span asp-validation-for="Name"></span>
    <p>
        @Html.LabelFor(m => m.Email, "Email")
        <br />
        @Html.EditorFor(m => m.Email)
    </p>
    <span asp-validation-for="Email"></span>
    <p>
        @Html.LabelFor(m => m.DataOfCreate, "DataOfCreate")
        <br />
        @Html.EditorFor(m => m.DataOfCreate)
    </p>
    <span asp-validation-for="DataOfCreate"></span>
    <p><input type="submit" value="Сохранить" /></p>
</fieldset>
}
@section Scripts
    {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
