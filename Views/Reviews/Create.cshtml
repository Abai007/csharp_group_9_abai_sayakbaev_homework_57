@model Review


@{ ViewBag.Title = "Reviews";

                Layout = "_Layout"; }


<h2>Добавьте отзыв</h2>


<div class="row">

    <div class="col-md-6">

        <form asp-action="Create" asp-controller="Reviews" method="post">

            <div class="form-row">

                <label for="">

                    Имя

                    <input asp-for="Name" type="text">

                </label>

            </div>

            <div class="form-row">

                <label for="">

                    Отзыв

                    <input asp-for="Description" type="text">

                </label>

            </div>

            <div class="form-row">

                <label for="">

                    Оцените телефон

                    @Html.DropDownList("Grade", new SelectList(new int[] { 1, 2, 3, 4, 5 }))

                </label>

                <input asp-for="PhoneId" type="hidden" value="@Model.Phone.Id">

            <button type="submit">Ок</button>

        </form>

    </div>

</div>